@model ABC_Retailers.Models.OrderStatus

@{
    var customers = ViewData["Customers"] as List<ABC_Retailers.Models.Customer>;
    var products = ViewData["Products"] as List<ABC_Retailers.Models.Product>;
}

<h1>Register a New Order Status</h1>

@if (customers == null || customers.Count == 0 || products == null || products.Count == 0)
{
    <div class="alert alert-warning">
        No customers or products available. Please ensure they are added first.
    </div>
}
else
{
    <form asp-action="Register" method="post">
        <div class="form-group">
            <label asp-for="Customer_ID">Select Customer</label>
            <select asp-for="Customer_ID" class="form-control" asp-items="@(new SelectList(customers, "Customer_Id", "Customer_Name"))">
                <option value="">-- Select Customer --</option>
            </select>
            <span asp-validation-for="Customer_ID" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Product_ID">Select Product</label>
            <select asp-for="Product_ID" class="form-control" asp-items="@(new SelectList(products, "Product_Id", "Product_Name"))">
                <option value="">-- Select Product --</option>
            </select>
            <span asp-validation-for="Product_ID" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="OrderStatus_Location"></label>
            <input asp-for="OrderStatus_Location" class="form-control" />
            <span asp-validation-for="OrderStatus_Location" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="OrderStatus_Date"></label>
            <input asp-for="OrderStatus_Date" class="form-control" type="datetime-local" />
            <span asp-validation-for="OrderStatus_Date" class="text-danger"></span>
        </div>
        <button type="submit" class="btn btn-primary">Submit Order Status</button>
    </form>
}

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
